// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  firstName String
  lastName String
  email String
  photo String?
  password String
  admin Int
  created_at DateTime? @default(now())
  updated_at DateTime? @default(now())

  passwordResetToken   String?
  passwordResetExpired DateTime?

  @@map("users")
  invoices Invoice[]
}

model Invoice {
  id String @id @default(uuid())
  description String
  value Float
  type Int
  created_at DateTime? @default(now())
  updated_at DateTime? @default(now())

  userId String
  user User @relation(fields: [userId], references: [id])

  categoryId String
  category Category @relation(fields: [categoryId], references: [id])

  repeatedInvoices repeatedInvoice[]
  @@map("inovoices")
}

model repeatedInvoice{
  id String @id @default(uuid())
  dateInit DateTime? @default(now())
  dateEnd DateTime

  invoiceId String
  invoice Invoice @relation(fields: [invoiceId], references: [id])

  @@map("repeatedInvoices")
}

model Category {
  id String @id @default(uuid())
  title String
  banner String
  created_at DateTime? @default(now())
  updated_at DateTime? @default(now())

  @@map("categories")
  invoices Invoice[]
}